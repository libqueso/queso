HOME_DIR = /Users/prudenci
QUESO_DIR = $(HOME_DIR)/Installations/i_queso_0_45_trunk/
BOOST_DIR = $(HOME_DIR)/Installations/i_boost_1_51_0/
GSL_DIR = $(HOME_DIR)/Installations/i_gsl_1_15/
GRVY_DIR = $(HOME_DIR)/Installations/i_grvy_0_32_0/
HDF5_DIR = $(HOME_DIR)/Installations/i_hdf5_1_8_9/
UQBT = gsl

INC_PATHS = \
	-I. \
	-I../inc \
	-I$(QUESO_DIR)/include \
	-I$(BOOST_DIR)/include \
	-I$(GSL_DIR)/include \
	-I$(GRVY_DIR)/include \
	-I$(HDF5_DIR)/include

LIBS = \
	-L$(QUESO_DIR)/lib \
	-lqueso \
	-L$(BOOST_DIR)/lib \
	-lboost_program_options \
	-L$(GSL_DIR)/lib \
	-lgsl \
	-L$(GRVY_DIR)/lib \
	-lgrvy \
	-L$(HDF5_DIR)/lib \
	-lhdf5 \
	-L/opt/local/lib \
	-llapack -lblas

CXX = mpic++
CXXFLAGS += -O2 -Wall -c

default: all

.SUFFIXES: .o .C

all:	codeVerif3

clean:
	rm -f *~
	rm -f *.o
	rm -f verif3_$(UQBT)

codeVerif3: verif3_$(UQBT).o 
	$(CXX) verif3_$(UQBT).o -o verif3_$(UQBT) $(LIBS)

%.o: %.C
	$(CXX) $(DEFINES) $(INC_PATHS) $(CXXFLAGS) $<
